<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.JaredMavis.boxedmeeting.NumberPickerButton
        android:id="@+id/increment"
        style="@style/button"
        android:layout_width="750px"
        android:layout_height="150px"
        android:background="@drawable/timepicker_up_btn" />

    <TextView
        android:id="@+id/timepicker_input"
        style="@style/editText"
        android:layout_width="750px"
        android:layout_height="400px"
        android:background="@drawable/timepicker_input_normal"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:onClick="onClick"
		android:clickable="true" />

    <com.JaredMavis.boxedmeeting.NumberPickerButton
        android:id="@+id/decrement"
        style="@style/button"
        android:layout_width="750px"
        android:layout_height="150px"
        android:background="@drawable/timepicker_down_btn" />

</merge>